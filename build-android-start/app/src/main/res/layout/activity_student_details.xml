<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="70dp"
    android:layout_margin="10dp"
    tools:context=".StudentDetails">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#80979797"
        android:elevation="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6f6f6"
            android:padding="15dp"
            >

            <ImageView
                android:id="@+id/s_Name"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:clickable="false"
                android:focusable="true"
                android:padding="1dp"
                android:src="@drawable/student_icon"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:textColor="#333030"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/s_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/s_Name"
                android:layout_margin="2dp"
                android:clickable="false"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:hint="Name"
                android:padding="1dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="15sp" />



            <TextView
                android:id="@+id/s_Father"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/s_name"
                android:layout_margin="2dp"
                android:clickable="false"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:hint="Father's Name"
                android:padding="1dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/s_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/s_Father"
                android:layout_margin="2dp"
                android:clickable="false"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:hint="Class"
                android:padding="1dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/s_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/s_class"
                android:layout_margin="2dp"
                android:clickable="false"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:hint="Date Of Birth"
                android:padding="1dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/s_Totalfees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/s_dob"
                android:layout_margin="2dp"
                android:clickable="false"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:hint="Total fees"
                android:padding="1dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/s_lastPayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/s_Totalfees"
                android:layout_margin="2dp"
                android:clickable="false"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:hint="Last PayOut"
                android:padding="1dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/s_Remaingfees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/s_lastPayout"
                android:layout_margin="2dp"
                android:clickable="false"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:hint="Remaining fees :"
                android:padding="1dp"
                android:singleLine="true"
                android:textColor="#333030"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/s_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/s_Remaingfees"
                android:layout_margin="2dp"
                android:clickable="false"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:hint="School Name :"
                android:padding="1dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="15sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>


